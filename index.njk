---
layout: layout.njk
---
<table class="leaderboard leaderboard-list">
	<caption>Choose a category</caption>
	<thead data-sr-only>
		<tr>
			<th>Category</th>
			<th>Site Count</th>
			<th>Last Run Date</th>
		</tr>
	</thead>
	<tbody>
	{%- for key, category in sites %} 
		<tr>
			<td><a href="/{{ (category.name or key) | lower | slug }}/">{{ category.description or category.name or key }}</a></td>
			<td><span class="count">Ã—{{ category.urls.length }}<span class="leaderboard-hide-sm"> site{% if category.urls.length != 1 %}s{% endif %}</span></span></td>
			<td class="leaderboard-hide-sm"><span class="small">{{ lastruns[key].timestamp | displayDate | safe }}</span></td>
		</tr>
	{%- endfor %}
	</tbody>
</table>